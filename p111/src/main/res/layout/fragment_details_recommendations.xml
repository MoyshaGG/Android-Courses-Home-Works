<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsRecommendationsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/timeEarthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:text="22 дні тому"
        android:textSize="14sp"
        android:drawablePadding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_access_time" />

    <TextView
        android:id="@+id/locationEarthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="6dp"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_location_searching"
        app:layout_constraintStart_toStartOf="@+id/timeEarthquake"
        app:layout_constraintTop_toBottomOf="@+id/timeEarthquake"
        tools:text="10 км на Пн-Сх від Токіо" />

    <TextView
        android:id="@+id/textIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@+id/locationEarthquake"
        app:layout_constraintTop_toBottomOf="@+id/locationEarthquake"
        tools:text="Інтенсивність" />

    <TextView
        android:id="@+id/intensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#8ACB79"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textIntensity"
        app:layout_constraintTop_toBottomOf="@+id/textIntensity"
        tools:text="Ледь відчутний" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Величина"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textIntensity" />

    <TextView
        android:id="@+id/magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_icon_park_waves"
        android:drawablePadding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/intensity"
        app:layout_constraintEnd_toEndOf="@+id/textView2"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/intensity"
        tools:text="1.0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/intensity"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/textRecomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/locationEarthquake"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:text="ПЕРВИННІ РЕКОМЕНДАЦІЇ" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_hide"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRecomendation" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="172dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_wait"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>